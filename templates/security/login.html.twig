{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Connexion{% endblock %}

{% block style %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}" />
{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="row">
            <div class="col-sm-4">
                <label for="inputPseudo">Identifiant :</label>
            </div>
            <div class="col-sm-8">
                <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" autocomplete="username" required autofocus>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <label for="inputPassword">Mot de passe :</label>
            </div>
            <div class="col-sm-8">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">


        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="row">
            <div class="col-sm-5 center">
                <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
            </div>
            <div class="col-sm-7 checkbox mb-3">
                <label><input type="checkbox" name="_remember_me"> Se souvenir de moi</label>
            </div>
        </div>

        </div>
    </form>
{% endblock %}
