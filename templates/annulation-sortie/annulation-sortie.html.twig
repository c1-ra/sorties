{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Annulation d'une sortie{% endblock %}

{% block body %}
<h1>Annuler une sortie</h1>
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            {{ form_start(motifAnnulationForm) }}
            <div class="row" id="annulation">
                <div class="col-4">
                    Nom de la sortie :
                </div>
                <div class="col-8">
                    {{ sortie.nom }}
                </div>
                <div class="col-4">
                    Date de la sortie :
                </div>
                <div class="col-8">
                    {{ sortie.dateHeureDebut|date('d/m/Y') }}
                </div>
                <div class="col-4">
                    Campus :
                </div>
                <div class="col-8">
                    {{ sortie.campus.nom }}
                </div>
                <div class="col-4">
                    Lieu :
                </div>
                <div class="col-8">
                    {{ sortie.lieu.nom }} - {{ sortie.lieu.rue }}
                </div>
                <div class="col-4">
                    {{ form_label(motifAnnulationForm.motif) }}
                </div>
                <div class="col-8">
                    {{ form_widget(motifAnnulationForm.motif) }}
                    {{ form_errors(motifAnnulationForm.motif) }}
                </div>
            </div>

            <div id="btns-sortie" class="row">
                <div class="col-4 offset-2">
                    <button class="btn btn-primary">Enregistrer</button>
                </div>
                <div class="col-4">
                    <a class="btn btn-secondary" href="{{ path('accueil') }}">Annuler</a>
                </div>
            </div>

            {{ form_end(motifAnnulationForm) }}
        </div>
    </div>


{% endblock %}